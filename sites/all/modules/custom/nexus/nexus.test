/**
 * @file SimpleTests for Nexus Neighborhood module.
 */

/**
 * Test case for the Nexus Neighborhood module.
 */
class NexusTestCase extends DrupalWebTestCase {
  function getInfo() {
    return array(
      'name' => t('Nexus'),
      'description' => t('Nexus tests.'),
      'group' => 'Nexus',
    );
  }

  function setUp() {
    parent::setUp('nexus');
  }

  /**
   * Tests for the admin interface.
   */
  function testNexusAdminPage() {
    $user = $this->drupalCreateUser(array('upload nexus xls data'));
    $this->drupalLogin($user);
    $this->drupalGet('admin/settings/nexus/xlsupload');
    $this->assertResponse(200, t('Found xlsupload settings page.'));
    $this->assertText('Upload Data', t('Found proper title on Nexus upload page.'));
  }
}